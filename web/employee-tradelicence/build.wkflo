def build(path, ci_image) {
    stage("Build") {
        docker.image("egovio/ci-react:v8.4.0-lerna").inside {
            sh "cd ${path}/rainmaker && rm -rf node_modules && npm set registry http://egov-micro-dev.egovernments.org/verdaccio && babel dev-packages/mihy-ui-framework-core/src/ --out-dir packages/mihy-ui-framework --copy-files && lerna bootstrap && cd packages/egov-tradelicence-core && npm run build && cp -r build ../../../employee-tradelicence/";
        }
    }
}

return this;
