def build(path, ci_image) {
    stage("Build") {
        docker.image("egovio/ci-react:v8.4.0-lerna-v2").inside {
        sh "cd ${path}/rainmaker && rm -rf node_modules && npm set registry http://egov-micro-dev.egovernments.org/verdaccio &&  lerna bootstrap && cd packages/egov-hrms && npm run build && cp -r build ../../../egov-hrms/";
	}
    }
}

return this;
